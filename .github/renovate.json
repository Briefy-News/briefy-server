{
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "lints",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["^eslint", "^prettier"],
      "labels": ["lint"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false
    }
  ]
}